<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heretical_camelid.fhau.android_app.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fhau"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cxn_status"

        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/btn_cxn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@color/colorCxnAmber"
        android:text="@string/press_to_connect"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tbl_presets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_fhau"

        />


    <TableLayout
        android:id="@+id/tbl_presets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_cxn_status"
        app:layout_constraintBottom_toTopOf="@id/tbl_simulator"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
        >
            <Button
                android:id="@+id/button1"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button2"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button3"
                app:layout_constraintStart_toEndOf="@id/button1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button4"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minWidth="100dp"

                android:minHeight="100dp"
                android:text="@string/unused_slot"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button5"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button6"
                app:layout_constraintStart_toEndOf="@id/button4" />

            <Button
                android:id="@+id/button6"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button7"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button8"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button8"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/button9"
                app:layout_constraintStart_toEndOf="@id/button7" />

            <Button
                android:id="@+id/button9"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/unused_slot"

                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button2" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tbl_simulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tbl_presets"
        app:layout_constraintBottom_toTopOf="@id/textview_report"
        >

        <TableRow
            android:id="@id/tbl_simulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            >

            <EditText
                android:id="@+id/tv_amp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:ems="40"
                android:inputType="text"
                android:text="FHAU Simulated Amplifier" />
            </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/et_amp_slot_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:ems="4"
                android:inputType="number"
                android:text="1"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:inputType="text"
                android:text="COOL SOUND"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textview_report"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="fill"
        android:layout_weight="1"
        android:scrollbarSize="10dp"
        android:scrollbars="vertical"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbl_simulator"
        app:layout_constraintBottom_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
