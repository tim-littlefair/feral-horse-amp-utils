<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heretical_camelid.fhau.android_app.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fhau"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cxn_status"

        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/btn_cxn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:backgroundTint="@color/fhauAmber"
        android:text="@string/press_to_connect"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tbl_presets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_fhau"

        />


    <TableLayout
        android:id="@+id/tbl_presets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_cxn_status"
        app:layout_constraintBottom_toTopOf="@id/tv_log"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
        >
            <Button
                android:id="@+id/button1"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button2"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateSpeakableTextCheck"
                />

            <Button
                android:id="@+id/button2"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button3"
                app:layout_constraintStart_toEndOf="@id/button1" />

            <Button
                android:id="@+id/button3"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button4"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button5"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button6"
                app:layout_constraintStart_toEndOf="@id/button4" />

            <Button
                android:id="@+id/button6"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button7"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button8"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button8"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toStartOf="@id/button9"
                app:layout_constraintStart_toEndOf="@id/button7" />

            <Button
                android:id="@+id/button9"
                style="@style/PresetButtonStyle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button2" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="fill"
        android:scrollbarSize="10dp"
        android:scrollbars="vertical"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@id/tbl_simulator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbl_presets"

        />

    <TableLayout
        android:id="@+id/tbl_simulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_log"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TableRow
            android:id="@id/tbl_simulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/lbl_amp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Amp Model: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_amp_name"
                />
            <EditText
                android:id="@+id/tv_amp_name"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="FHAU Simulated Amplifier"
                app:layout_constraintStart_toEndOf="@id/lbl_amp_name"
                app:layout_constraintEnd_toEndOf="@id/parent"
                />
            </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/lbl_slot_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="SLOT 01: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_slot_name_1"
                />

            <EditText
                android:id="@+id/et_slot_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="COOL SOUND"
                app:layout_constraintEnd_toEndOf="@id/parent"
                app:layout_constraintStart_toEndOf="@id/lbl_slot_number_1" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/lbl_slot_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="SLOT 02: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_slot_name_2"
                />

            <EditText
                android:id="@+id/et_slot_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="WARM SOUND"
                app:layout_constraintEnd_toEndOf="@id/parent"
                app:layout_constraintStart_toEndOf="@id/lbl_slot_number_2" />
        </TableRow>

    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
